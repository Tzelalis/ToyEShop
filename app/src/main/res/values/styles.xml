<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>    <!--Overlay contextual action bar to toolbar-->
    </style>
    
    <style name="AppTheme.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="productsRecyclerViewPriceText">
        <item name="android:textSize">24sp</item>\
        <item name="android:textStyle">bold</item>
    </style>

    <style name="productsRecyclerViewOldPriceText">
        <item name="android:textColor">@color/oldPrice</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="productsRecyclerViewDescriptionText">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="discoundTextView">
        <item name="android:textColor">@color/colorDiscountText</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="idTextView">
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="addCustomerTitleTextView">
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="specificCustomerLabels">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="specificCustomersTextView">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">5dp</item>
        <item name="paddingEnd">5dp</item>
    </style>

    <style name="productAdminItemTextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/textInputLayoutErrorColor</item>
    </style>

    <style name="TextAppearance.App.CollapsingToolbar.Expanded" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TextAppearance.App.CollapsingToolbar.Collapsed" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="cartTextItemTextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>
