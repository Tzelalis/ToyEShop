<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rv_product_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:elevation="4dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/rv_product_item_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/productImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/productPriceTextView"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="false"
            android:scaleType="fitCenter"
            android:src="@drawable/default_hookah_image" />


        <TextView
            android:id="@+id/productPriceTextView"
            style="@style/productsRecyclerViewPriceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/productDescTextView"
            android:paddingStart="4dp"
            android:paddingTop="4dp"
            android:paddingEnd="4dp"
            tools:text="12" />

        <TextView
            android:id="@+id/productOldPriceTextView"
            style="@style/productsRecyclerViewOldPriceText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/productDescTextView"
            android:layout_toEndOf="@id/productPriceTextView"
            android:paddingStart="4dp"
            android:paddingTop="4dp"
            android:paddingEnd="4dp"
            tools:text="16" />

        <TextView
            android:id="@+id/productDescTextView"
            style="@style/productsRecyclerViewDescriptionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/productIDTextView"
            android:layout_alignParentBottom="false"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:paddingBottom="1dp"
            tools:text="Μαύρη μπλούζα Nike" />

        <TextView
            android:id="@+id/discountTextView"
            style="@style/discoundTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/colorDiscountBackground"
            android:padding="2dp"
            tools:text="30%" />

        <TextView
            android:id="@+id/productIDTextView"
            style="@style/idTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            tools:text="123456" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>