<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rv_product_item_layout"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_gravity="bottom"
    android:elevation="4dp"
    android:background="@color/productItemBackground">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/productImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/productPriceTextView"
        android:scaleType="centerCrop"
        android:src="@color/colorAccent" />


    <TextView
        android:id="@+id/productPriceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/productDescTextView"
        android:paddingStart="4dp"
        android:paddingTop="4dp"
        android:paddingEnd="4dp"
        style="@style/productsRecyclerViewPriceText"
        tools:text="14€" />

    <TextView
        android:id="@+id/productOldPriceTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/productDescTextView"
        android:layout_toEndOf="@id/productPriceTextView"
        android:paddingStart="4dp"
        android:paddingTop="4dp"
        android:paddingEnd="4dp"
        style="@style/productsRecyclerViewOldPriceText"
        tools:text="18€" />

    <TextView
        android:id="@+id/productDescTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:paddingBottom="4dp"
        style="@style/productsRecyclerViewDescriptionText"
        tools:text="Μαύρη μπλούζα, XS-XXL" />

</RelativeLayout>