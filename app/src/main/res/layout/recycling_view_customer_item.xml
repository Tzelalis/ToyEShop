<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rv_customer_item_layout"
    android:paddingStart="5dp"
    android:paddingEnd="5dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">
    <TextView
        android:id="@+id/rvCustomerItemIdTextBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="5dp"
        android:textStyle="bold"
        android:layout_gravity="center_vertical"
        tools:text="0112" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_weight="1">



        <TextView
            android:id="@+id/rvCustomerItemLastnameTextBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Τζελαλής" />

        <TextView
            android:id="@+id/rvCustomerItemFirstnameTextBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Παναγιώτης" />
    </LinearLayout>

    <TextView
        android:id="@+id/rvCustomerItemPhoneTextBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        tools:text="6940211909" />

</LinearLayout>