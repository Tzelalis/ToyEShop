<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/recyclerViewCartImageView"
                android:layout_width="117dp"
                android:layout_height="117dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/recyclerViewCartId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="5dp"
                android:ems="3"
                android:gravity="center_horizontal"
                android:inputType="number"
                tools:text="00011" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recyclerViewCartName"
                style="@style/cartTextItemTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:breakStrategy="simple"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                android:textSize="14sp"
                tools:text="Ναργιλές" />

            <TextView
                android:id="@+id/recyclerViewCartTotalPrice"
                style="@style/cartTextItemTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:textSize="18sp"
                tools:text="(150€)" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/productQuantityLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/minusImageButton"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:backgroundTint="@color/addMinusButtonsRecycleriewColor"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                app:cornerRadius="90dp"
                app:icon="@drawable/remove_clip_art"
                app:iconGravity="textStart"
                app:iconPadding="0dp" />

            <EditText
                android:id="@+id/orderQuantityEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="2"
                android:gravity="center_horizontal"
                android:inputType="number"
                android:singleLine="true"
                android:text="1"
                tools:text="1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/addCartQuantityButton"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:backgroundTint="@color/addMinusButtonsRecycleriewColor"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                app:cornerRadius="90dp"
                app:icon="@drawable/add_clip_art"
                app:iconGravity="textStart"
                app:iconPadding="0dp" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>